                <!-- Nhập IP và nút Connect -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,10">
                        <TextBlock Text="IP:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBox x:Name="ServerIpTextBox"
                                 Text="localhost"
                                 Width="120"
                                 Margin="0,0,10,0"
                                 ToolTip="Nhập địa chỉ IP của máy chủ"/>

                        <TextBlock Text="Cổng:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBox x:Name="ServerPortTextBox"
                                 Text="5038"
                                 Width="50"
                                 Margin="0,0,10,0"
                                 ToolTip="Nhập cổng của máy chủ"/>

                        <Button x:Name="ConnectButton"
                                Content="Kết nối"
                                Width="80"
                                Margin="0,0,10,0"
                                Click="ConnectButton_Click"/>

                        <Button x:Name="NewGameButton"
                                Content="Ván mới"
                                Width="80"
                                Margin="0,0,10,0"
                                IsEnabled="False"
                                Click="NewGameButton_Click"/>

                        <Button x:Name="ResignButton"
                                Content="Đầu hàng"
                                Width="80"
                                IsEnabled="False"
                                Click="ResignButton_Click"/>
